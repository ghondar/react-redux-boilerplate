.flex
  display: flex
  justify-content: space-around

.card_action
  &:hover
    cursor: pointer
    width: 370px
    height: auto

.card_content
  width: 100%
  height: 100%
  text-align: center

.card_element_1
  margin: auto
  margin-top: 15px

.card_element_2
  margin: auto
  ul
    list-style: none
    padding: 0px
    margin: 0px
    li
      &:nth-child(1)
        font-weight: bold
        font-size: 15px
        color: rgb(14, 117, 238)
      &:nth-child(2)
        color: #9E9E9E
        font-size: 11px
        padding-top: 7px

.display_template
  height: 100%
  display: flex

.menu
  width: 285px
  height: 800px
  background: rgb(29, 36, 47)

.dashboard
  width: 100%
